<% include ../partials/header%>
<div class="container">
   <h1 style="text-align:center">New CampGround</h1>
   <div style="width:30%; margin: 20px auto;">
      <form action="/campgrounds" method="POST">
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Name" name="campground[title]" required>
         </div>
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Image URL" name="campground[img]" required>
         </div>
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Location" name="campground[location]" required>
         </div>
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Description" name="campground[content]" required>
         </div>
         <div class="form-group">
            <input type="number" min="1" class="form-control" placeholder="Price" name="campground[price]" required>
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block btn-outline-primary">Make new CampGround</button>
         </div>
      </form>
      <a href="/campgrounds">Back to Campgrounds</a>
   </div>
</div>
<% include ../partials/footer%>