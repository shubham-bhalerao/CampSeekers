<% include ../partials/header%>
<div class="container">
   <h1 style="text-align:center">Edit CampGround</h1>
   <div style="width:30%; margin: 20px auto;">
      <form action="/campgrounds/<%=campground.slug%>?_method=PUT" method="POST">
         <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.title%>" name="campground[title]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.img%>" name="campground[img]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.location%>" name="campground[location]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.content%>" name="campground[content]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=campground.price%>" name="campground[price]">
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block btn-outline-primary">Edit CampGround</button>
         </div>
      </form>
      <a href="/campgrounds">Back to Campgrounds</a>
   </div>
</div>
<% include ../partials/footer%>