<% include ./partials/header%>
<div class="container">
   <h2 style="text-align:center; margin-bottom: 0; margin-top: 20px;">Forgot Password</h2>
   <form  action="/forgot" method="POST" style="width: 40%; margin: 0 auto; padding: 20px;">
      <div class="form-group">
         <label >Email</label>
         <input type="email" class="form-control" placeholder="Email" name="email" required>
      </div>
      <div class="form-group">
         <label >The Password reset instrutions will be sent on the email</label>
      </div>    
      <button type="submit" class="btn btn-lg btn-outline-primary btn-block">Submit</button>
   </form>   
</div>
<% include ./partials/footer%>