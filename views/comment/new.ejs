<% include ../partials/header%>
<div class="container">
   <h1 style="text-align:center">New Comment</h1>
   <div style="width:30%; margin: 20px auto;">
      <form action="/campgrounds/<%=campground.slug%>/comments" method="POST">
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Say Something..." name="comment[text]" required>
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block btn-outline-primary">Make new Comment</button>
         </div>
      </form>
      <a href="/campgrounds/<%=campground._id%>">Back to the Campground</a>
   </div>
</div>
<% include ../partials/footer%>