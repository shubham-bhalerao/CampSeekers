<% include ../partials/header%>
<div class="container">
   <div class="card shadow bg-white rounded" style="margin: 30px auto; width: 40%;">
      <div class="card-body">
         <h2 style="text-align:center; margin-bottom: 0; margin-top: 20px;">Edit Comment</h2>
         <form  action="/campgrounds/<%=campgroundSlug%>/comments/<%=comment._id%>?_method=PUT" method="POST" style="margin: 0 auto;">
            <div class="form-group">
              <label >Comment</label>
              <input type="text" class="form-control" value="<%=comment.text%>" name="comment[text]">
            </div>
            <button type="submit" class="btn btn-lg btn-outline-primary btn-block">Update Comment</button>
         </form> 
      </div>
    </div>
</div>
<% include ../partials/footer%>